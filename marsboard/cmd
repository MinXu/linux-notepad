

extract-tarball:
        @echo "Extracting tarball $(TARBALL)" && \
        mkdir -p $(DIR) && \
        tar -C $(DIR) -xf $(TARBALL) && \
        touch $(DIR)

$(KERNEL_BASE): $(KERNEL_TARBALL)
        @make extract-tarball TARBALL=$< DIR=$@



patch -d $(DIR) -p1 < $$patch



